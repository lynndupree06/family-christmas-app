<div class="panel col-md-offset-3 col-md-6">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'panel-body'}, role: 'form') do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="actions">
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
