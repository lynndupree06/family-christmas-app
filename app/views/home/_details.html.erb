<div class="modal fade" id="details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <form role="form" ng-model="item" name="addItemForm" ng-submit="home.updateItem(item, <%= current_user.id %>)" novalidate>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 ng-show="item.mode === 'new'" class="modal-title" id="myModalLabel">Add New Item</h4>
          <h4 ng-show="item.mode === 'edit'" class="modal-title" id="myModalLabel">Edit Item</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="title">Short Description <span class="required">*</span></label>
            <input ng-model="item.title" type="text" class="form-control" maxLength="50" id="title" placeholder="Enter a short description of item" required="required">
          </div>
          <div class="form-group">
            <label for="description">Long Description</label>
            <textarea ng-model="item.description" class="form-control" id="description" rows="3" placeholder="Add more details here"></textarea>
          </div>
          <div class="form-group">
            <label for="link">Optional URL</label>
            <input ng-model="item.link" type="url" class="form-control" id="link" placeholder="Enter link to item">
          </div>
          <div class="form-group">
            <label for="importance">Importance <span class="required">*</span></label>
            <select ng-model="item.importance" class="form-control" required="required">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          <span id="helpBlock" class="help-block">
            Prioritize which items are most important to you by ranking them from 1 (least important) to 5 (most important).
          </span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button ng-show="item.mode === 'edit'" type="submit" class="btn btn-primary">Save changes</button>
          <button ng-show="item.mode === 'new'" type="submit" class="btn btn-primary">Add item</button>
        </div>
      </div>
    </div>

  </form>
</div>

