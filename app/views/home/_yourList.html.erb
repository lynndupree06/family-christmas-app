<div ng-show="home.isView('list')">
  <h1>My Wish List</h1>
  <button class="btn btn-primary" ng-click="setMode('new')">
    <i class="glyphicon glyphicon-plus-sign"></i> Add Item to List
  </button>

  <div class="jumbotron content" ng-hide="list.length === 0">
    <div ng-repeat="item in list">

      <section class="item panel panel-default">
        <div class="panel-heading title">
          {{item.title}}
          <div class="btn-group right">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <i class="glyphicon glyphicon-cog"></i>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li ng-click="home.editItem(item)">
                <a><i class="glyphicon glyphicon-pencil"></i> Edit</a>
              </li>
              <li ng-click="deleteItem(item.id)">
                <a><i class="glyphicon glyphicon-trash"></i> Delete</a>
              </li>
            </ul>
          </div>

        </div>

        <div class="panel-body">
          <div class="created-at">Created on {{item.created_at | date:"MM/dd/yyyy 'at' h:mma"}}</div>
          <div class="importance">
              <span ng-repeat="i in [1, 2, 3, 4, 5]">
                <i ng-show="item.importance >= i" class="glyphicon glyphicon-star"></i>
                <i ng-show="item.importance < i" class="glyphicon glyphicon-star-empty"></i>
              </span>
          </div>
          <div class="description">{{item.description}}</div>

          <div ng-show="item.link">
            <h4>Related Link</h4>
            <a href="{{item.link}}" target="_blank">{{item.link}}</a>
          </div>
        </div>
      </section>

    </div>
  </div>

  <div class="empty-list jumbotron" ng-show="list.length === 0">
    <h1>Your list is empty</h1>
  </div>

  <button class="btn btn-primary" ng-click="setMode('new')">
    <i class="glyphicon glyphicon-plus-sign"></i> Add Item to List
  </button>
</div>