<div ng-show="isView('list')">
  <h1>My Wish List</h1>
  <button class="btn btn-primary" ng-click="setMode('new')">
    <i class="glyphicon glyphicon-plus-sign"></i> Add Item to List
  </button>

  <div class="jumbotron content">
    <wish-list ng-hide="list.length === 0"></wish-list>
    <h1 class="empty-list" ng-show="list.length === 0">Your list is empty</h1>
  </div>

  <button class="btn btn-primary" ng-click="setMode('new')">
    <i class="glyphicon glyphicon-plus-sign"></i> Add Item to List
  </button>

  <br><br>

  <i ng-class="{'glyphicon glyphicon-chevron-right':!showArcive, 'glyphicon glyphicon-chevron-down':showArchive}"></i><button type="button" class="btn btn-link" ng-click="toggleArchive()">Archive</button><br><br>
  <div ng-show="showArchive" class="content">
    <div ng-repeat="item in archive">
      <section class="item panel panel-default">
        <div class="panel-heading title">
            {{item.title}}
            <div ng-show="yourList" class="btn-group pull-right">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"
                        aria-expanded="false">
                    <i class="glyphicon glyphicon-cog"></i>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li ng-click="unArchive(item)">
                        <a><i class="glyphicon glyphicon-level-up"></i> Un-Archive</a>
                    </li>
                    <li ng-click="deleteItem(item.id)">
                        <a><i class="glyphicon glyphicon-trash"></i> Delete</a>
                    </li>
                </ul>
            </div>

        </div>

        <div class="panel-body">
            <div class="created-at">Created on {{item.created_at | date:"MM/dd/yyyy 'at' h:mma"}}</div>
            <div class="importance">
              <span ng-repeat="i in [1, 2, 3, 4, 5]">
                <i ng-show="item.importance >= i" class="glyphicon glyphicon-star"></i>
                <i ng-show="item.importance < i" class="glyphicon glyphicon-star-empty"></i>
              </span>
            </div>
            <div class="description">{{item.description}}</div>

            <div ng-show="item.link">
                <h4 class="hidden-sm hidden-xs">Related Link</h4>
                <a href="{{item.link}}" target="_blank">{{item.link}}</a>
            </div>

            <div style="clear: both"></div>
        </div>
    </section>
    </div>
  </div>
</div>